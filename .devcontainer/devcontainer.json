{
  "name": "so-101-ros2 Dev Container",
  "image": "ghcr.io/shrujanus/ros2_ws:latest",
  "runArgs": [
    "--gpus",
    "all",
    "--add-host",
    "host.docker.internal:host-gateway",
    "--privileged"
  ],
  "workspaceFolder": "/root/repo",
  "mounts": [
    "source=${localWorkspaceFolder},target=/root/repo,type=bind",
    "source=/dev,target=/dev,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
